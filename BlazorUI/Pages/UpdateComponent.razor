<!-- UpdateEmployeeComponent.razor -->
@page "/employee/update/{employeeId:int}"
@using EMS.Models.DTOS
@inherits UpdateBase
<head>
    <link rel="stylesheet" href="css/Style.css" />
</head>
<!-- Your existing code above this line -->

<EditForm Model="@updateEmployeeDto" OnValidSubmit="UpdateEmployee">
    <DataAnnotationsValidator />
    <div class="registration-form">
        <h3 class="mt-4 mb-4">Employee Update</h3>
        <div class="col-md-4">
            <div class="form-group">
                <label for="DepartmentId" class="form-label">Department ID:</label>
                <input id="DepartmentId" class="form-control" @bind-value="updateEmployeeDto.DepartmentId" />
                @if (string.IsNullOrWhiteSpace(updateEmployeeDto.DepartmentId.ToString()))
                {
                    <div class="d-flex align-items-center">
                        <span class="validation-message"><ValidationMessage For="@(() => updateEmployeeDto.DepartmentId)" /></span>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="FirstName" class="form-label">First Name:</label>
                    <input id="FirstName" class="form-control" @bind-value="updateEmployeeDto.FirstName" placeholder="Optional" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="LastName" class="form-label">Last Name:</label>
                    <input id="LastName" class="form-control" @bind-value="updateEmployeeDto.LastName" placeholder="Optional" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="DateOfBirth" class="form-label">Date of Birth:</label>
                    <input id="DateOfBirth" type="date" class="form-control" @bind-value="updateEmployeeDto.DateOfBirth" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Hobbies" class="form-label">Hobbies:</label>
                    <input id="Hobbies" class="form-control" @bind-value="updateEmployeeDto.Hobbies" placeholder="Optional" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="PhoneNumber" class="form-label">Mobile Number:</label>
            <input id="PhoneNumber" class="form-control" @bind-value="updateEmployeeDto.PhoneNumber" placeholder="Optional" />
            @if (string.IsNullOrWhiteSpace(updateEmployeeDto.PhoneNumber))
            {
                <div class="d-flex align-items-center">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => updateEmployeeDto.PhoneNumber)" /></span>
                </div>
            }
        </div>
        <div class="form-group">
            <label for="Email" class="form-label">Email:</label>
            <input id="Email" type="email" class="form-control" @bind-value="updateEmployeeDto.Email" placeholder="Optional" />
            @if (string.IsNullOrWhiteSpace(updateEmployeeDto.Email))
            {
                <div class="d-flex align-items-center">
                    <span class="fw-bold" style="font-size: 0.9rem;"><ValidationMessage For="@(() => updateEmployeeDto.Email)" /></span>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="HireDate" class="form-label">Hire Date:</label>
                    <input id="HireDate" type="date" class="form-control" @bind-value="updateEmployeeDto.HireDate" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="JobTitle" class="form-label">Job Title:</label>
                    <input id="JobTitle" class="form-control" @bind-value="updateEmployeeDto.JobTitle" placeholder="Optional" />
                </div>
            </div>
        </div>
        <div class="d-flex flex-column align-items-center mt-3">
            <div class="d-flex flex-column flex-md-row align-items-center justify-content-center">
                <button class="btn btn-primary mb-2" type="submit">Update</button>
            </div>
        </div>
    </div>
</EditForm>

